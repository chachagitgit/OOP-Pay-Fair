@page
@{
    ViewData["Title"] = "Terms and Conditions";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/tAndC.css" />
}
<header class="header">
    <div class="header-left">
        <div class="hamburger" id="hamburger">
            <i class="fas fa-bars"></i>
        </div>
        <h1 class="app-title" onclick="window.location.href='/'">FairFare</h1>
    </div>
    <div class="logo">
        <i class="fas fa-user"></i>
    </div>
</header>
<!-- Sidebar -->
<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <h2 class="sidebar-title">FairFare</h2>
        <div class="close-btn" id="closeSidebar">
            <i class="fas fa-times"></i>
        </div>
    </div>
    <div class="sidebar-menu">
        <a class="sidebar-item" href="/Terms">Terms and Conditions</a>
        <a class="sidebar-item" href="/Privacy">Privacy Policy</a>
        <a class="sidebar-item" href="/About">About Us</a>
        <a class="sidebar-item" href="/Contact">Contact Us</a>
    </div>
</div>
<!-- Overlay -->
<div class="overlay" id="overlay"></div>
<!-- Main Content -->
<div class="slideshow-container">
    <h1>Terms and Conditions</h1>
    <ul>
        <li>By registering, you agree to provide accurate information.</li>
        <li>Your data will be handled according to our privacy policy.</li>
        <li>Do not misuse the service or attempt unauthorized access.</li>
        <li>We reserve the right to update these terms at any time.</li>
    </ul>
</div>
@section Scripts {
<script>
    const hamburger = document.getElementById('hamburger');
    const sidebar = document.getElementById('sidebar');
    const closeSidebar = document.getElementById('closeSidebar');
    const overlay = document.getElementById('overlay');

    // Open sidebar
    hamburger.addEventListener('click', () => {
        sidebar.classList.add('open');
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
    });

    // Close sidebar
    function closeSidebarFunc() {
        sidebar.classList.remove('open');
        overlay.classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    closeSidebar.addEventListener('click', closeSidebarFunc);
    overlay.addEventListener('click', closeSidebarFunc);

    // Close sidebar with Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && sidebar.classList.contains('open')) {
            closeSidebarFunc();
        }
    });
</script>
}
