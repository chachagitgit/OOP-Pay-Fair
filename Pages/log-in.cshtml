@page
@model OOP_Fair_Fare.Pages.logInModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="/css/log-in.css" />
}

<div class="login-container">
    <h1 class="welcome-title">Welcome!</h1>
    <p class="welcome-subtitle">Log in to your account to continue</p>
    <form method="post">
        <div class="form-group">
            <input type="text" class="form-input" name="Input.EmailOrUsername" placeholder="Email / Username" required />
        </div>
        <div class="form-group">
            <input type="password" class="form-input" name="Input.Password" placeholder="Password" required />
        </div>
        <div class="login-btn-wrapper">
            <button type="submit" class="login-btn">Log in</button>
        </div>
        @if (!string.IsNullOrEmpty(Model?.ErrorMessage)) {
            <div class="error-message">@Model.ErrorMessage</div>
        }
    </form>
    
    <div class="signup-section">
        Don't have an account yet? <a href="/signUp" class="signup-link">Sign Up here!</a>
    </div>
</div>