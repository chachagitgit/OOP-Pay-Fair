@page
@{
    ViewData["Title"] = "FairFare Homepage";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ffHomepage.css" />
}
<!-- Sidebar Overlay -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>
<!-- Sidebar -->
<nav class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <h2 class="sidebar-title">FairFare</h2>
        <button class="close-btn" id="closeSidebar">Ã—</button>
    </div>
    <div class="sidebar-menu">
        <a href="/Terms">Terms and Conditions</a>
        <a href="/Privacy">Privacy Policy</a>
        <a href="/About">About Us</a>
        <a href="/Contact">Contact Us</a>
    </div>
</nav>
<header>
    <!-- Burger Menu on the left -->
    <div class="burger-menu" id="burgerMenu">
        <div class="burger-icon" id="burgerIcon">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <div></div>
    <!-- Logo on the right -->
    <figure class="logo">
        <img src="/images/logo.png" alt="PayFare Logo">
    </figure>
</header>
<main>
    <section class="carousel next">
        <div class="list">
            <article class="item other_1">
                <div class="main-content" 
                style="background-color: #9c4d2f; background-image: url('/images/bg1.png'); background-size: cover; background-position: center;">
                    <div class="content">
                        <img src="/images/full%20logo.png" alt="PayFare Logo" class="title-image">
                        <p class="Header">Ride Easy, Pay Fairly</p>
                        <p class="description">
                            PayFare is a fare calculating app designed for commuters across the Philippines. It provides accurate fare estimates for various transportation modes, helping users plan their trips efficiently and budget their travel costs with ease.
                        </p>
                    </div>
                </div>
                <figure class="image">
                    <img src="/images/pogs.png" alt="PayFare App Interface">
                </figure>
            </article>
            <article class="item active">
                <div class="main-content" 
                style="background-color: #f5bfaf; background-image: url('/images/bg2.png'); background-size: cover; background-position: center;">
                    <div class="content">
                        <img src="/images/full%20logo.png" alt="PayFare Logo" class="title-image">
                        <p class="Aheader2">Your fare buddy, anywhere in the Philippines</p>
                        <p class="description">
                            A Fare Calculating App designed for commuters across the Philippines
                        </p>
                    </div>
                </div>
                <figure class="image">
                    <img src="/images/pinplace.png" alt="Location Pin">
                </figure>
            </article>
            <article class="item other_2">
                <div class="main-content" 
                style="background-color: #dedfe1; background-image: url('/images/bg3.png'); background-size: cover; background-position: center;">
                    <div class="content">
                        <img src="/images/full%20logo.png" alt="PayFare Logo" class="title-image">
                        <p class="description">
                            A Fare Calculating App designed for commuters across the Philippines
                        </p>
                        <button class="CalculateNow" onclick="location.href='/ffDashboard'">
                            Calculate Now
                        </button>
                    </div>
                </div>
                <figure class="image">
                    <img src="/images/cars.png" alt="Transportation Options">
                </figure>
            </article>
        </div>
        <div class="arrows">
            <button id="prev"><</button>
            <button id="next">></button>
        </div>
    </section>
</main>
@section Scripts {
    <script src="~/js/ffHomepage.js"></script>
}
